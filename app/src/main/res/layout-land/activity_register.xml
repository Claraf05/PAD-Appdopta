<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#C9E3AF"
    tools:context=".features.register.RegisterActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="709dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="557dp"
                android:layout_height="337dp"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="32dp"
                android:background="#57FFFFFF"
                app:cardBackgroundColor="#B7FFFFFF"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="493dp"
                    android:layout_height="255dp"
                    android:layout_gravity="center|center_horizontal|top"
                    android:layout_marginTop="30dp"
                    android:fadingEdge="horizontal|vertical|none"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/usernameRegister"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_user"
                        android:ems="10"
                        android:hint="@string/user"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/phoneRegister"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_phone"
                        android:ems="10"
                        android:hint="@string/phone"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/emailRegister"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_email"
                        android:ems="10"
                        android:hint="@string/email"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/passwordRegister"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_lock"
                        android:ems="10"
                        android:hint="@string/pass"
                        android:inputType="textPassword"
                        android:password="true" />

                    <EditText
                        android:id="@+id/repeatpassRegister"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_repw"
                        android:ems="10"
                        android:fadingEdge="horizontal|vertical|none"
                        android:hint="@string/rePass"
                        android:inputType="textPassword"
                        android:password="true"
                        android:requiresFadingEdge="horizontal|vertical|none" />

                </LinearLayout>

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:baselineAligned="false"
                    android:onClick="register"
                    android:text="@string/register"
                    app:backgroundTint="#1F3A20"
                    app:iconPadding="5dp"
                    app:iconTint="#FFFFFF" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="363dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textoPrevLista"
                    android:layout_width="161dp"
                    android:layout_height="27dp"
                    android:text="@string/alrAcc"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:onClick="login"
                    android:text="@string/login"
                    android:textColor="#105BEC"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="124dp"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>